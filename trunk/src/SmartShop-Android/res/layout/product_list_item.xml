<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">
	<ImageView android:id="@+id/image" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/icon" />
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_toRightOf="@+id/image" >
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18dip"
			android:id="@+id/txtProductName" android:text="Name"
			android:textColor="#00ff00" />

		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/txtProductPrice"
			android:text="Price" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/txtDescription"
			android:text="Description" />
	</LinearLayout>
	<Button android:id="@+id/btnMap" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/map"
		android:layout_alignParentRight="true" />
</RelativeLayout>
